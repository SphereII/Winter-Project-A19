<!--  add infection attacks to all zombies  -->

	<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']">
		<effect_group name="Infection Attack Buff">
			<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" buff="InfectedAttack"/>
		</effect_group>
	</append>
	<append xpath="/entity_classes/entity_class[@name='zombieRegularTemplate']">
		<effect_group name="Infection Attack Buff">
			<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" buff="InfectedAttack"/>
		</effect_group>
	</append>
	
<!--  add random walktypes to all zombies  -->	
	
	<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']">
		<effect_group name="RNDWalkStart">
			<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="ZombieWalkChange"/>		
		</effect_group>
	</append>
	<append xpath="/entity_classes/entity_class[@name='zombieRegularTemplate']">
		<effect_group name="RNDWalkStartCP">
			<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="ZombieWalkChange"/>		
		</effect_group>
	</append>	
	
