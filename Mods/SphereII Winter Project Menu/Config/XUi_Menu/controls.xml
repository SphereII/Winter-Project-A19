      <rect name="${name}" depth="${depth|3}" pos="${pos|0,0}" width="${width|200}" height="${height|85}" font_size_default="${height-16|16}" font_size_hover="${height-8|24}" enabled_font_color="[darkGrey]" disabled_font_color="${disabled_font_color|[disabledLabelColor]}" controller="SimpleButton" visible="${visible|true}">
        <texture name="SMXmmButton1" depth="1" pos="10,-26" size="253,75" texture="@modfolder:Textures/menu/smx_winterp_hdr.png" pivot="${pivot|center}" />
        <button name="clickable" pos="0,${Round(-height/2,0)|-16}" sprite="" type="sliced" hoverscale="1.0" tooltip_key="${tooltip_key|}" pivot="${pivot|center}"   />
