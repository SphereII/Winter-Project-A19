<!--Modified Health, Stamina, Water, Food, XP and stuff-->
	<remove xpath="/windows/window[@name='HUDLeftStatBars']"/>
	<append xpath="/windows">
		<window name="HUDLeftStatBars" >
		<rect name="hud" pos="9,118" rows="2" cols="1" width="168" side="right" controller="CharacterFrameWindow">
			<panel name="header" height="15" depth="1" pos="9999,9999" backgroundspritename="ui_game_panel_header">
				<label depth="2" name="characterName" pos="42,-6" width="150" height="32" text="" font_size="32"/>
				<label depth="2" name="levelNumber" pos="240,-10" width="80" height="28" text="" color="[lightGrey]"/>
			</panel>
			<rect visible="{showcharacter}" pos="9999,9999" >
				<panel name="previewFrame" depth="0" pos="0,0" width="10" on_press="true" on_hover="true" disableautobackground="true" snap="false">
					<rect>
						<texture depth="2" name="playerPreview" material="Materials/Transparent Colored" size="8,8" globalopacity="false"/>
					</rect>
			</panel>
			</rect>

			<!--Stealth Bar-->
			<rect pos="0,14" width="151" height="36" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
				<sprite depth="1" name="border" color="0,0,0,150" height="36" type="sliced" />
				<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />

				<filledsprite depth="3" name="background" color="110,110,110,128" type="filled" fill="1" />

				<filledsprite depth="4" name="BarContent" color="{stealthcolor}" type="filled" fill="0" />
				<sprite depth="5" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="32,32" pos="2,-2" foregroundlayer="true"/>
				<label depth="6" name="TextContent" pos="38,-3" font_size="28" color="[white]" justify="center"  text="{statcurrent}" height="34" width="100"/>

				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
				<filledsprite depth="8" name="background" color="0,0,0,255" width="151" fillcenter="false" type="filled" fill="1" />
				<filledsprite depth="3" name="background" color="0,0,0,255" width="150" fillcenter="false" type="filled" fill="1" />
			</rect>


			
			<!--XP Bar-->

			<rect pos="193,-75" width="75" height="75" cursor_area="true" xp_fill_speed="2" >
				<sprite depth="1" height="77" width="77"  name="border" sprite="ui_game_filled_circle" color="[black]" pivot="center" globalopacity="false"/>			
				<sprite depth="2" name="center" sprite="ui_game_filled_circle" color="115,115,115" pivot="center" globalopacity="false"/>
				<sprite depth="3" height="69" width="69"  name="border" sprite="ui_game_filled_circle" color="[black]" pivot="center" globalopacity="false"/>				
				<sprite depth="4" height="69" width="69" name="background" sprite="ui_game_filled_circle" color="{xpcolor}" pivot="center" globalopacity="false" type="filled" fill="{xp}" filldirection="radial360" controller="ToolbeltWindow"/>
				<sprite depth="5" width="55" height="55" name="center" sprite="ui_game_filled_circle" color="115,115,115" pivot="center" globalopacity="false"/>
				
				<label depth="6" pos="0,-3" name="Lvl" width="45" height="45" pivot="center" justify="center" text="Level:{playerlevel}  XP^{playerxptonextlevel}" font_size="20" controller="PlayerStatsWindow"/>					
				
				<label depth="8" pos="0,6" name="Lvl" width="45" height="20" pivot="center" justify="center" text="Lvl: {playerlevel}" font_size="20" controller="PlayerStatsWindow"/>				
				<sprite depth="7" pos="0,6" width="45" height="20" name="center"  color="115,115,115" pivot="center" globalopacity="false"/>
						
					<!--Health Bar-->
						<rect  pos="42,36" width="151" height="36" controller="HUDStatBar" stat_type="Health" visible="{statvisible}">
							<sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>

							<sprite depth="2"  name="background" color="0,0,0,140" type="sliced" />
							<filledsprite depth="3" name="background" color="110,110,110,128" width="149" type="filled" fill="{statmodifiedmax}" />

							<filledsprite depth="5"  name="BarContent" color="255,0,0,128" width="149" type="filled" fill="0" />
							<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="32,32" pos="2,-2" foregroundlayer="true"/>
							<label depth="7" name="TextContent" pos="38,-3" font_size="28" color="[white]" text="{statcurrentwithmax}" height="34"/>

							<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
							<filledsprite depth="8"  name="background" color="0,0,0,255" width="151" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
							<filledsprite depth="3" name="background" color="0,0,0,255" width="150" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
						</rect>
		
					
					<!--Stamina Bar-->
						<rect pos="42,0" width="151" height="36"  controller="HUDStatBar" stat_type="Stamina" visible="{statvisible}">
							<sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>
							<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />

							<filledsprite depth="3" name="background" color="110,110,110,128" width="149" type="filled" fill="{statmodifiedmax}" />

							<filledsprite depth="5" name="BarContent" color="0,54,255,128" width="149" type="filled" fill="0" />
							<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_agility" size="32,32" pos="2,-2" foregroundlayer="true"/>
							<label depth="7" name="TextContent" pos="38,-3" font_size="28" color="[white]" text="{statcurrentwithmax}" height="34"/>

							<sprite depth="8"  name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
							<filledsprite depth="8" name="background" color="0,0,0,255" width="151" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
							<filledsprite depth="3" name="background" color="0,0,0,255" width="150" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
						</rect>
			
			
						<!--Food Bar-->			
						<rect pos="-193,36" width="151" height="36"  controller="HUDStatBar" stat_type="Food" visible="{statvisible}">
								<sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>
								<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />

								<filledsprite depth="3" name="background" color="110,110,110,128" width="149" type="filled" fill="{statmodifiedmax}" />

								<filledsprite depth="5" name="BarContent" color="0,150,54,128" width="149" type="filled" fill="0" />
								<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_fork" size="32,32" pos="117,-2" foregroundlayer="true"/>
								<label depth="7" name="TextContent" pos="2,-3" font_size="28" color="[white]" text="{playerfood}/{playerfoodmax}" justify="right" height="34" width="111" controller="PlayerStatsWindow" />

								<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
								<filledsprite depth="8" name="background" color="0,0,0,255" width="151" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
								<filledsprite depth="3" name="background" color="0,0,0,255" width="150" fillcenter="false" type="filled" fill="{statmodifiedmax}"/>
						
						</rect>
						
						<!--Water Bar-->	
						<rect pos="-193,0" width="151" height="36" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
							<sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>
							<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
							
							<filledsprite depth="3" name="background" color="110,110,110,128" width="149" type="filled" fill="{statmodifiedmax}"/>

							<filledsprite depth="5" name="BarContent" color="0,200,255,128" width="149" type="filled" fill="0" />
							<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_water" size="32,32" pos="117,-2" foregroundlayer="true"/>
							<label depth="7" name="TextContent" pos="2,-3" font_size="28" color="[white]" text="{playerwater}/{playerwatermax}" justify="right" height="34" width="111" controller="PlayerStatsWindow"/>

							<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
							<filledsprite depth="8" name="background" color="0,0,0,255" width="151" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
							<filledsprite depth="3" name="background" color="0,0,0,255" width="150" fillcenter="false" type="filled" fill="{statmodifiedmax}"  />
						</rect>
					
			</rect>
	

		</rect>


		<!--God Mode / Buffs Popup -->
		<rect name="hud" pos="90,106" side="left" controller="BuffPopoutList" pivot="BottomLeft" >
			<panel width="168" height="46" name="item" visible="false" pivot="right" disableautobackground="true" pos="70, 0" style="press" sound="[recipe_click]" on_hover="true" >
				<sprite depth="3" pos="0,0"  name="Background" sprite="ui_game_popup" height="46" width="162" pivot="center" flip="Horizontally" color="[transparent]" />
				<sprite depth="4" name="Icon" size="40,40" pos="-54,0" pivot="center" color="[transparent]"/>
				<label depth="6" name="TextContent" pos="0,0" font_size="28" color="[white]" justify="center" height="40" pivot="center"/>
			</panel>
		</rect>
				
		</window>
	</append>


